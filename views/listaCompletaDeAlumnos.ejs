<% include partials/head.ejs %>

<div class="container">
        <% include buscador.ejs %>
    <div class="row">
        <br>
        <div class="col-12 text-center">

            <h1> <%= title %> </h1>
            <hr/>
                
        </div>
    </div>
        <% if(mensaje != '') {%>
        
            <div class="row">
                <div class="col-12 text-center">
                        <div class="alert alert-success" role="alert"><%= mensaje %></div> 
                </div>
                    
            </div>
    
    <% } %>
    <div class="row">
        <div class="col-md">
            
            <table class='table table-striped table-bordered'> 
                <tr class="text-center">
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido

                    </th>
                    <th>
                        Domunento
                    </th>
                    <th>
                        Domicilio
                    </th>
                    <th>
                            Acciones
                        </th>
                </tr>
                
                    <% for (var i = 0; i < alumno.length; i++) { %>
                    <tr class="text-center">
                    
                    <td><%= alumno[i].nombre %></td>
                    <td><%= alumno[i].apellido %></td>
                    <td><%= alumno[i].documento %></td>
                    <td><%= alumno[i].domicilio %></td>
                    <td>
                            <a style='text-decoration: none' href="/alumno/delete/<%= alumno[i].id %>" > 
                                <i style='color:red' class="icon-trash" data-toggle="tooltip" data-placement="top" title="Eliminar alumno"></i>
                            </a>
                            <a style='text-decoration: none' href="/alumno/update/<%= alumno[i].documento %>" > 
                                <i style='color:blue;padding-left: 15px' data-toggle="tooltip" data-placement="top" title="Editar alumno" class="icon-edit"></i>
                            </a>
                        </td>
                    </tr>    
                    <% } %>
                </table>
            
        </div> 
    </div>
</div>
<% include partials/footer.ejs %>